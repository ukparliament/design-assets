<meta charset="utf-8">

<%= content_tag( 'title', @page_title || $SITE_TITLE ) %>
<%= tag( 'meta', :name => 'description', :content => @description ) %>

<%= csrf_meta_tags %>
<%= csp_meta_tag %>

<%= tag( 'meta', :name => 'viewport', :content => 'width=device-width,initial-scale=1' ) %>
<%= tag( 'meta', :name => 'apple-mobile-web-app-capable', :content => 'yes' ) %>
<%= tag( 'meta', :name => 'mobile-web-app-capable', :content => 'yes' ) %>

<meta name="format-detection" content="telephone=no">
<meta name="format-detection" content="date=no">

<%= tag( 'link', :rel => 'icon', :href => '/icon.png', :type => 'image/png' ) %>
<%= tag( 'link', :rel => 'icon', :href => '/icon.svg', :type => 'image/svg+xml' ) %>
<%= tag( 'link', :rel => 'apple-touch-icon', :href => '/icon.png' ) %>

<%= render 'library_design/library_design_stylesheets' %>
<%= stylesheet_link_tag "application" %>

<%= tag( 'link', :rel => 'alternate', :href => @csv_url, :type => 'text/csv' ) if @csv_url %>
<%= tag( 'link', :rel => 'alternate', :href => @rss_url, :type => 'application/rss+xml' ) if @rss_url %>

<%= render :partial => 'library_design/head/json_ld/crumb', :object => @crumb %>