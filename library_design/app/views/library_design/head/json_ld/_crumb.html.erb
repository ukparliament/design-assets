<script type="application/ld+json">
    {
		"@context": "https://schema.org",
		"@type": "BreadcrumbList",
		"itemListElement": [
		  	 <% if crumb.empty? -%>
		  		{
	        		"@type": "ListItem",
	        		"position": 1,
	        		"name": "<%= $SITE_TITLE %>"
	      	  	}
			<% else -%>
				{
	        		"@type": "ListItem",
	        		"position": 1,
	        		"name": "<%= $SITE_TITLE %>",
				 	"item": "<%= home_url %>"
	      	  	}
				<%= render :partial => 'library_design/head/json_ld/crumb_item', :collection => crumb %>
			<% end -%>
		]
    }
</script>